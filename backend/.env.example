# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/3ari9

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# AI Services
# OpenAI for story generation
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs for text-to-speech
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Stable Diffusion for image generation
STABLE_DIFFUSION_API_KEY=your_stable_diffusion_api_key_here

# AWS S3 for media storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=3ari9-media

# Stripe for payment processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRICE_ID_MONTHLY=price_monthly_subscription_id
STRIPE_PRICE_ID_YEARLY=price_yearly_subscription_id

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@3ari9.com

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# Logging
LOG_LEVEL=debug